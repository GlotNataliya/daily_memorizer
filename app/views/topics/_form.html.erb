<%= form_with(model: topic, id: "#{dom_id(topic)}_form") do |form| %>
  <div class="row g-3 justify-content-center mb-5">
    <div class="col-auto">
      <%= form.label :name_your_topic, class: "col-form-label ms-2 topic-label" %>
    </div>
    <div class="col-auto">
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="col-auto">
      <%= form.submit class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
